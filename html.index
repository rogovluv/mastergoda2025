<!DOCTYPE html>
<html>
  <head>
    <title>WebAR 3D Model - World</title>
    <!-- Подключаем A-Frame -->
    <script src="https://aframe.io/releases/1.2.0/aframe.min.js"></script>
  </head>
  <body>
    <a-scene>
      <!-- Загружаем модель world.glb -->
      <a-assets>
        <a-asset-item id="world" src="assets/world.glb"></a-asset-item>
      </a-assets>

      <!-- Добавляем модель на сцену -->
      <a-entity gltf-model="#world" position="0 0 -4" scale="2 2 2"></a-entity>

      <!-- Камера для вращения и взаимодействия -->
      <a-camera position="0 1.6 0">
        <a-cursor></a-cursor>
      </a-camera>
    </a-scene>
  </body>
</html>
